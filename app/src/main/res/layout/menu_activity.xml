<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/customerAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="151dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:onClick="toAddCustumer"
        android:text="@string/addCustomer" />

    <Button
        android:id="@+id/customerListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="151dp"
        android:text="@string/customerList"
        android:onClick="toCustomersList"/>

    <Button
        android:id="@+id/scheduleAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:text="@string/addSchedule"
        android:onClick="toAddSchedule"/>

    <Button
        android:id="@+id/schedulesListBtn"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/schedulesList"
        android:onClick="toSchedulesList"/>

</GridLayout>